using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp3
{
    class Class2
    {
        static void Main(string[] args)
        {
            int num = 6;
            int Sum = 0;
            string str = "";
            for (int i =1; i <= num; i++)
            {
                Sum = Sum + i;
                str = str + i + "+";
            }
            str=str.Substring(0, str.Length-1) + "=";
            Console.WriteLine(str+Sum);
        }
    }
}
